<Window x:Class="PGI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Connexion - PGI Nordik Adventures" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#F8FAFC">
    
    <Window.Resources>
        <!-- Style pour les TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#669BBC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#003049"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#669BBC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#003049"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les Buttons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#669BBC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#003049" BlurRadius="12" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#003049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#780000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#003049"/>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="20" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#003049" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panneau gauche avec gradient -->
            <Border Grid.Column="0" CornerRadius="20,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#780000" Offset="0"/>
                        <GradientStop Color="#003049" Offset="0.5"/>
                        <GradientStop Color="#669BBC" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <StackPanel VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="NORDIK ADVENTURES" 
                             FontSize="32" 
                             FontWeight="Bold" 
                             Foreground="White" 
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Margin="0,0,0,16">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <TextBlock Text="SystÃ¨me de Gestion IntÃ©grÃ©" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             Foreground="White" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,50"/>
                    
                    <Border Background="Transparent" CornerRadius="12" Padding="20" Margin="0,20,0,0" BorderBrush="#FFFFFF66" BorderThickness="2">
                        <StackPanel>
                            <TextBlock Text="âœ“ Gestion des Stocks" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                            <TextBlock Text="âœ“ Finances &amp; Facturation" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                            <TextBlock Text="âœ“ Relation Client (CRM)" Foreground="White" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Panneau droit avec formulaire -->
            <Grid Grid.Column="1">
                <StackPanel VerticalAlignment="Center" Margin="50,40">
                    <!-- Bouton fermer -->
                    <Button x:Name="CloseButton" 
                            Content="âœ•" 
                            FontSize="20" 
                            Width="35" 
                            Height="35" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-20,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#94A3B8"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="17.5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FEE2E2"/>
                                        <Setter Property="Foreground" Value="#DC2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Titre -->
                    <TextBlock Text="Bienvenue ! ðŸ‘‹" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="#1F2937"
                             Margin="0,20,0,8"/>
                    
                    <TextBlock Text="Connectez-vous pour accÃ©der au systÃ¨me" 
                             FontSize="14" 
                             Foreground="#64748B"
                             Margin="0,0,0,32"/>
                    
                    <!-- Nom d'utilisateur -->
                    <TextBlock Text="Nom d'utilisateur" 
                             FontSize="13" 
                             FontWeight="SemiBold" 
                             Foreground="#475569"
                             Margin="0,0,0,8"/>
                    
                    <TextBox x:Name="UsernameTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>
                    
                    <!-- Mot de passe -->
                    <TextBlock Text="Mot de passe" 
                             FontSize="13" 
                             FontWeight="SemiBold" 
                             Foreground="#475569"
                             Margin="0,0,0,8"/>
                    
                    <Grid Margin="0,0,0,24">
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource ModernPasswordBox}"
                                     Visibility="Visible"/>
                        <TextBox x:Name="PasswordTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Visibility="Collapsed"/>
                        <Button x:Name="TogglePasswordButton"
                                Content="ðŸ‘ï¸"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#64748B"
                                FontSize="18"
                                Cursor="Hand"
                                Click="TogglePasswordButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F1F5F9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <!-- Message d'erreur -->
                    <TextBlock x:Name="ErrorMessage" 
                             Text="" 
                             FontSize="12" 
                             Foreground="#DC2626"
                             Visibility="Collapsed"
                             TextWrapping="Wrap"
                             Margin="0,0,0,16"/>
                    
                    <!-- Bouton connexion -->
                    <Button x:Name="LoginButton" 
                            Content="ðŸ” Se connecter" 
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,20"
                            Click="LoginButton_Click"/>
                    
                    <!-- Lien inscription -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <TextBlock Text="Pas encore de compte ? " 
                                 FontSize="13" 
                                 Foreground="#64748B"/>
                        <TextBlock x:Name="RegisterLink" 
                                 Text="S'inscrire" 
                                 FontSize="13" 
                                 FontWeight="SemiBold" 
                                 Foreground="#7C3AED"
                                 Cursor="Hand"
                                 MouseLeftButtonDown="RegisterLink_Click">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

