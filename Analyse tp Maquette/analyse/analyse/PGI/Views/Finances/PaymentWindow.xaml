                    <TextBlock Text="Montant Ã  payer" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtMontantPaye"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
