<Window x:Class="PGI.RapportVentesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapport de ventes par client" Height="600" Width="1000"
        Background="#F8FAFC">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Rapport de ventes par client" 
                       FontWeight="Bold" FontSize="16" Foreground="#1E3A8A" VerticalAlignment="Center"/>
            <Button Content="Filtrer par période" Margin="20,0,0,0" Padding="10,5" Background="#1E40AF" Foreground="White"/>
            <Button Content="Exporter PDF" Margin="10,0,0,0" Padding="10,5" Background="#1E40AF" Foreground="White"/>
        </StackPanel>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False"
                  Background="#FFFFFF" BorderBrush="#93C5FD"
                  GridLinesVisibility="All" HeadersVisibility="Column"
                  RowBackground="#F8FAFC" AlternatingRowBackground="#FFFFFF">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="8,6"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Client" Width="250"/>
                <DataGridTextColumn Header="Nombre de commandes" Width="150"/>
                <DataGridTextColumn Header="Montant total" Width="150"/>
                <DataGridTextColumn Header="Dernière commande" Width="150"/>
                <DataGridTextColumn Header="Statut" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

