<Window x:Class="PGI.HistoriqueMouvementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Historique des mouvements de stock" Height="500" Width="900"
        Background="#F8FAFC">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Historique complet des mouvements de stock (entrées et sorties)" 
                   FontWeight="Bold" FontSize="16" Foreground="#1E3A8A" Margin="0,0,0,12"/>
        <ListView Grid.Row="1" Background="#FFFFFF" BorderBrush="#93C5FD">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" Width="120"/>
                    <GridViewColumn Header="Type" Width="80"/>
                    <GridViewColumn Header="Produit" Width="200"/>
                    <GridViewColumn Header="SKU" Width="100"/>
                    <GridViewColumn Header="Quantité" Width="80"/>
                    <GridViewColumn Header="Motif" Width="200"/>
                    <GridViewColumn Header="Utilisateur" Width="120"/>
                </GridView>
            </ListView.View>
            <ListViewItem>
                <TextBlock Text="2025-10-28 10:30 | OUT | Gants Pro | SKU-001 | 5 | Vente client | J. Dupont"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="2025-10-28 14:15 | IN | Tente 2P | SKU-114 | 12 | Réception fournisseur | M. Martin"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="2025-10-27 09:00 | OUT | Sac à dos Trek | SKU-205 | 3 | Vente client | J. Dupont"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="2025-10-26 16:45 | IN | Chaussures Pro | SKU-302 | 25 | Réception fournisseur | M. Martin"/>
            </ListViewItem>
            <ListViewItem>
                <TextBlock Text="2025-10-25 11:20 | OUT | Gants Pro | SKU-001 | 8 | Vente client | J. Dupont"/>
            </ListViewItem>
        </ListView>
    </Grid>
</Window>

