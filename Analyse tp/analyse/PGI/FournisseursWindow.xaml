<Window x:Class="PGI.FournisseursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des fournisseurs" Height="600" Width="1000"
        Background="#F8FAFC">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Liste complète des fournisseurs" 
                   FontWeight="Bold" FontSize="16" Foreground="#1E3A8A" Grid.ColumnSpan="2" Margin="0,0,0,12"/>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" Margin="0,0,12,0"
                  Background="#FFFFFF" BorderBrush="#93C5FD"
                  GridLinesVisibility="All" HeadersVisibility="Column"
                  RowBackground="#F8FAFC" AlternatingRowBackground="#FFFFFF">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="8,6"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Width="100"/>
                <DataGridTextColumn Header="Nom" Width="200"/>
                <DataGridTextColumn Header="Rabais (%)" Width="100"/>
                <DataGridTextColumn Header="Délai moyen (jours)" Width="150"/>
                <DataGridTextColumn Header="Contact" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Fiche fournisseur">
            <StackPanel Margin="8">
                <TextBlock Text="Code" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="FOUR-001"/>
                <TextBlock Text="Nom" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="Équipements Nordik Inc."/>
                <TextBlock Text="Rabais (%)" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="5"/>
                <TextBlock Text="Délai moyen (jours)" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="7"/>
                <TextBlock Text="Téléphone" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="418-555-1234"/>
                <TextBlock Text="Courriel" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="contact@nordik.ca"/>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Nouveau" Margin="0,0,8,0" Padding="10,5" Background="#1E40AF" Foreground="White"/>
                    <Button Content="Enregistrer" Margin="0,0,8,0" Padding="10,5" Background="#1E40AF" Foreground="White"/>
                    <Button Content="Supprimer" Padding="10,5" Background="#DC2626" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

