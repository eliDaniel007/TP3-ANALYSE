<UserControl x:Class="PGI.Views.CRM.CampaignFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock x:Name="TxtTitle" 
                           Text="ðŸ“¢ Nouvelle Campagne Marketing" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#003049"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Formulaire -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nom de la campagne -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom de la campagne *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtNomCampagne" Grid.Row="0" Grid.Column="1" 
                             Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                             Padding="12,10" FontSize="14" Margin="0,0,0,15"/>

                    <!-- Type -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Type *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CmbType" Grid.Row="1" Grid.Column="1" 
                             Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                             Padding="12,10" FontSize="14" Margin="0,0,0,15">
                        <ComboBoxItem Content="Email" IsSelected="True"/>
                        <ComboBoxItem Content="SMS"/>
                        <ComboBoxItem Content="PublicitÃ©"/>
                        <ComboBoxItem Content="Promotion"/>
                    </ComboBox>

                    <!-- Description -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Top"/>
                    <TextBox x:Name="TxtDescription" Grid.Row="2" Grid.Column="1" 
                             Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                             Padding="12,10" FontSize="14" Height="80" 
                             TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

                    <!-- Dates -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Date dÃ©but *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DpDateDebut" Grid.Row="3" Grid.Column="1" 
                               Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                               Padding="12,10" FontSize="14" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Date fin *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DpDateFin" Grid.Row="4" Grid.Column="1" 
                               Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                               Padding="12,10" FontSize="14" Margin="0,0,0,15"/>

                    <!-- Budget et Destinataires -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Budget ($) *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtBudget" Grid.Row="5" Grid.Column="1" 
                             Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                             Padding="12,10" FontSize="14" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Nombre de destinataires *" Foreground="#64748B" Margin="0,0,0,10" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtNbDestinataires" Grid.Row="6" Grid.Column="1" 
                             Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="2" 
                             Padding="12,10" FontSize="14"/>
                </Grid>
            </Border>

            <!-- Boutons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Annuler" 
                        Background="#E2E8F0" 
                        Foreground="#64748B"
                        BorderThickness="0"
                        Padding="25,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Margin="0,0,15,0"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Enregistrer" 
                        Background="#669BBC" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="25,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="BtnSave_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#003049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

