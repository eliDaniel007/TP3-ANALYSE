<UserControl x:Class="PGI.Views.CRM.ClientsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <Grid Margin="0,0,0,20">
                <TextBlock Text="ðŸ‘¤ Liste des Clients" 
                         FontSize="24" 
                         FontWeight="SemiBold" 
                         Foreground="#003049"
                         VerticalAlignment="Center"/>
                <Button Content="âž• Ajouter un client" 
                        Background="#10B981" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        Click="BtnAddClient_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Recherche et filtres -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TxtSearch" 
                         Grid.Column="0"
                         Background="White"
                         BorderBrush="#E2E8F0"
                         BorderThickness="2"
                         Padding="12,10"
                         FontSize="14"
                         Text="Rechercher par Nom, Email ou TÃ©lÃ©phone..."
                         Foreground="#94A3B8"
                         Margin="0,0,15,0"
                         GotFocus="TxtSearch_GotFocus"
                         LostFocus="TxtSearch_LostFocus"
                         TextChanged="TxtSearch_TextChanged"/>

                <ComboBox x:Name="CmbStatusFilter" 
                          Grid.Column="1"
                          Background="White"
                          BorderBrush="#E2E8F0"
                          BorderThickness="2"
                          Padding="12,10"
                          FontSize="14"
                          Margin="0,0,15,0"
                          SelectionChanged="Filter_SelectionChanged">
                    <ComboBoxItem Content="Tous les statuts" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸ”µ Prospect"/>
                    <ComboBoxItem Content="ðŸŸ¢ Actif"/>
                    <ComboBoxItem Content="â­ FidÃ¨le"/>
                    <ComboBoxItem Content="âš« Inactif"/>
                </ComboBox>

                <ComboBox x:Name="CmbTypeFilter" 
                          Grid.Column="2"
                          Background="White"
                          BorderBrush="#E2E8F0"
                          BorderThickness="2"
                          Padding="12,10"
                          FontSize="14"
                          Margin="0,0,15,0"
                          SelectionChanged="Filter_SelectionChanged">
                    <ComboBoxItem Content="Tous les types" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸ‘¤ Particulier"/>
                    <ComboBoxItem Content="ðŸ¢ Entreprise"/>
                </ComboBox>

                <Button Grid.Column="3"
                        Content="ðŸ”„ RÃ©initialiser" 
                        Background="#E2E8F0" 
                        Foreground="#64748B"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Click="BtnResetFilters_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Tableau -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" BorderBrush="#E2E8F0" BorderThickness="1">
            <DataGrid x:Name="ClientsDataGrid" 
                    AutoGenerateColumns="False" 
                    RowHeight="50"
                    HeadersVisibility="Column"
                    GridLinesVisibility="None"
                    Background="Transparent"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    IsReadOnly="True"
                    SelectionMode="Single"
                    FontSize="13"
                    MouseDoubleClick="ClientsDataGrid_MouseDoubleClick">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F8FAFC"/>
                        <Setter Property="Foreground" Value="#64748B"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Padding" Value="20,15"/>
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="20,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom du client" Binding="{Binding Nom}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#669BBC"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Courriel" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="TÃ©lÃ©phone" Binding="{Binding Telephone}" Width="130"/>
                    <DataGridTemplateColumn Header="Statut" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding StatutColor}" 
                                        CornerRadius="12" 
                                        Padding="8,4"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Statut}" 
                                             Foreground="White" 
                                             FontSize="11" 
                                             FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="CA Total" Binding="{Binding ChiffreAffaires}" Width="120"/>
                    <DataGridTextColumn Header="DerniÃ¨re interaction" Binding="{Binding DerniereInteraction}" Width="140"/>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="âœï¸" 
                                            Width="30" Height="30" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="Modifier"
                                            Margin="2"
                                            Click="BtnEdit_Click"/>
                                    <Button Content="ðŸ‘ï¸â€ðŸ—¨ï¸" 
                                            Width="30" Height="30" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            ToolTip="DÃ©sactiver"
                                            Foreground="#94A3B8"
                                            Margin="2"
                                            Click="BtnDeactivate_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>

