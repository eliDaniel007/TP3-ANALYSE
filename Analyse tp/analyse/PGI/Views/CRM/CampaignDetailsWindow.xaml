<Window x:Class="PGI.Views.CRM.CampaignDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DÃ©tails de la campagne"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock x:Name="TxtNomCampagne" 
                               Text="Campagne" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="#003049"/>
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Border x:Name="BorderStatut" 
                                Background="#3B82F6" 
                                CornerRadius="6" 
                                Padding="10,5">
                            <TextBlock x:Name="TxtStatut" 
                                       Text="PLANIFIÃ‰E" 
                                       FontSize="12" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"/>
                        </Border>
                        <Border Background="#EEF2FF" CornerRadius="6" Padding="10,5" Margin="10,0,0,0">
                            <TextBlock x:Name="TxtType" Text="Email" FontSize="12" Foreground="#003049"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- KPIs -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Budget" FontSize="11" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtBudget" Text="0 $" FontSize="20" FontWeight="Bold" Foreground="#003049"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“§ Destinataires" FontSize="11" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtDestinataires" Text="0" FontSize="20" FontWeight="Bold" Foreground="#003049"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="âœ… RÃ©ponses" FontSize="11" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtReponses" Text="0" FontSize="20" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="White" CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Taux de rÃ©ponse" FontSize="11" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtTauxReponse" Text="0 %" FontSize="20" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Informations -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ Informations de la campagne" FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Text="Description :" Foreground="#64748B" Margin="0,5"/>
                        <TextBlock x:Name="TxtDescription" Grid.Row="0" Grid.Column="1" Text="-" TextWrapping="Wrap" Margin="0,5"/>

                        <TextBlock Grid.Row="1" Text="Date dÃ©but :" Foreground="#64748B" Margin="0,5"/>
                        <TextBlock x:Name="TxtDateDebut" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,5"/>

                        <TextBlock Grid.Row="2" Text="Date fin :" Foreground="#64748B" Margin="0,5"/>
                        <TextBlock x:Name="TxtDateFin" Grid.Row="2" Grid.Column="1" Text="-" Margin="0,5"/>

                        <TextBlock Grid.Row="3" Text="Date crÃ©ation :" Foreground="#64748B" Margin="0,5"/>
                        <TextBlock x:Name="TxtDateCreation" Grid.Row="3" Grid.Column="1" Text="-" Margin="0,5"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Statistiques dÃ©taillÃ©es -->
            <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“ˆ Statistiques dÃ©taillÃ©es" FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                    <TextBlock x:Name="TxtStatistiques" Text="Les statistiques dÃ©taillÃ©es seront disponibles aprÃ¨s la fin de la campagne." 
                               FontSize="13" Foreground="#64748B" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Bouton Fermer -->
            <Button Grid.Row="4" 
                    Content="Fermer" 
                    Background="#E2E8F0" 
                    Foreground="#64748B"
                    BorderThickness="0"
                    Padding="25,12"
                    FontSize="14"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    Click="BtnClose_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CBD5E1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </ScrollViewer>
</Window>

