                                BorderThickness="0"
                                Padding="15,10"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Cursor="Hand"
                                Margin="0,0,12,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="ðŸ›’ CrÃ©er une commande fournisseur" 
                                Background="White" 
                                Foreground="#92400E"
                                BorderThickness="2"
                                BorderBrush="#F59E0B"
                                Padding="15,10"
                                FontWeight="SemiBold"
                                FontSize="13"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- Derniers mouvements de stock -->
                <Border Grid.Column="0" Background="Transparent" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Derniers mouvements de stock" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#1E293B"
                                 Margin="0,0,0,15"/>
                        
                        <Border Background="White" CornerRadius="10" Padding="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#CBD5E1" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <!-- Mouvement 1 -->
                                <Border Padding="20,15" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#DCFCE7" Width="45" Height="45" CornerRadius="8" Padding="10">
                                            <TextBlock Text="ðŸ“¥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
