                                            <TextBlock Text="OUT" FontSize="11" FontWeight="SemiBold" Foreground="#EF4444"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- Mouvement 3 -->
                                <Border Padding="20,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0" Background="#DCFCE7" Width="45" Height="45" CornerRadius="8" Padding="10">
                                            <TextBlock Text="ðŸ“¥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                            <TextBlock Text="Ajustement inventaire" FontWeight="SemiBold" Foreground="#1E293B"/>
                                            <TextBlock Text="Sac Ã  dos 45L â€¢ il y a 3h" FontSize="11" Foreground="#64748B"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" Text="+5" FontSize="18" FontWeight="Bold" Foreground="#10B981" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                        <Border Grid.Column="3" Background="#DCFCE7" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                                            <TextBlock Text="IN" FontSize="11" FontWeight="SemiBold" Foreground="#10B981"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Raccourcis -->
                <Border Grid.Column="1" Background="Transparent">
                    <StackPanel>
                        <TextBlock Text="âš¡ Raccourcis" 
                                 FontSize="16" 
                                 FontWeight="SemiBold" 
                                 Foreground="#1E293B"
                                 Margin="0,0,0,15"/>
                        
                        <Border Background="White" CornerRadius="10" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#CBD5E1" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <Button Content="+ Ajouter un produit" 
                                        Background="#669BBC" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,12"
                                        FontWeight="SemiBold"
                                        FontSize="13"
                                        Cursor="Hand"
                                        Margin="0,0,0,12">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Content="+ Ajouter un fournisseur" 
                                        Background="White" 
                                        Foreground="#003049"
                                        BorderThickness="2"
                                        BorderBrush="#E2E8F0"
                                        Padding="15,12"
                                        FontWeight="SemiBold"
                                        FontSize="13"
                                        Cursor="Hand"
                                        Margin="0,0,0,12">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                
                                <Button Content="ðŸ·ï¸ GÃ©rer les catÃ©gories" 
