                                Background="#669BBC" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="10,5"
                                Margin="0,10,0,0"
                                FontSize="11"
                                Cursor="Hand"
                                Click="BtnCalculateInventory_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#003049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- Carte Produits actifs -->
                <Border Grid.Column="1" Background="#F0FDF4" CornerRadius="10" Padding="20" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦ Produits actifs" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtActiveProducts" Text="247" FontSize="24" FontWeight="Bold" Foreground="#003049"/>
                        <TextBlock Text="Dans le catalogue" FontSize="10" Foreground="#64748B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Carte Fournisseurs -->
                <Border Grid.Column="2" Background="#FEF3C7" CornerRadius="10" Padding="20" Margin="0,0,12,0">
