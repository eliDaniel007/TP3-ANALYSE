                                            <TextBlock Text="ðŸ“¤" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                            <TextBlock Text="Vente - Facture #3421" FontWeight="SemiBold" Foreground="#1E293B"/>
