<UserControl x:Class="PGI.Views.Finances.PurchaseFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <StackPanel>
                <!-- En-tÃªte -->
                <Grid Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock x:Name="TxtFormTitle" Text="ðŸ“¦ Nouvelle Commande Fournisseur" 
                                 FontSize="24" 
                                 FontWeight="SemiBold" 
                                 Foreground="#003049"
                                 Margin="0,0,0,10"/>
                        <Border x:Name="BorderStatut" Background="#F59E0B" CornerRadius="12" Padding="10,5" HorizontalAlignment="Left">
                            <TextBlock x:Name="TxtStatut" Text="BROUILLON" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Content="ðŸ’¾ Enregistrer" 
                                Background="#669BBC" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,12"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="0,0,10,0"
                                Click="BtnSave_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#003049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="ðŸ“¦ RÃ©ceptionner" 
                                Background="#10B981" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,12"
                                FontSize="14"
                                Cursor="Hand"
                                Margin="0,0,10,0"
                                Click="BtnReceive_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âŒ Annuler" 
                                Background="#E2E8F0" 
                                Foreground="#64748B"
                                BorderThickness="0"
                                Padding="20,12"
                                FontSize="14"
                                Cursor="Hand"
                                Click="BtnCancel_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CBD5E1"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Section Fournisseur -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ­ Fournisseur" FontSize="18" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,20"/>
                        
                        <ComboBox x:Name="CmbFournisseur" 
                                  Background="White"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="2"
                                  Padding="12,10"
                                  FontSize="14"
                                  SelectionChanged="CmbFournisseur_SelectionChanged">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Section Produits -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“¦ Produits Ã  commander" FontSize="18" FontWeight="SemiBold" Foreground="#003049" VerticalAlignment="Center"/>
                            <Button Content="âž• Ajouter un produit" 
                                    Background="#10B981" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    FontSize="12"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"
                                    Click="BtnAddProduct_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <DataGrid x:Name="ProductsDataGrid" 
                                AutoGenerateColumns="False" 
                                RowHeight="45"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                Background="Transparent"
                                BorderThickness="0"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="13"
                                Margin="0,0,0,15">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                    <Setter Property="Foreground" Value="#64748B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produit" Binding="{Binding Produit}" Width="*"/>
                                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="120"/>
                                <DataGridTextColumn Header="CoÃ»t d'achat" Binding="{Binding CoutAchat}" Width="120"/>
                                <DataGridTextColumn Header="QuantitÃ©" Binding="{Binding Quantite}" Width="100"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="120"/>
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Width="30" Height="30" 
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Foreground="#DC2626"
                                                    Click="BtnRemoveProduct_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <Border Background="#EEF2FF" CornerRadius="8" Padding="20" HorizontalAlignment="Right" MinWidth="300">
                            <Grid>
                                <TextBlock Text="MONTANT TOTAL ESTIMÃ‰ :" FontSize="14" FontWeight="Bold" Foreground="#003049" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtTotal" Text="0,00 $" FontSize="20" FontWeight="Bold" Foreground="#669BBC" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

