<Window x:Class="PGI.Views.Finances.ExpenseFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Nouvelle DÃ©pense"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <StackPanel>
                <!-- En-tÃªte -->
                <TextBlock x:Name="TxtTitle" 
                           Text="ðŸ’° Nouvelle DÃ©pense" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#003049"
                           Margin="0,0,0,25"/>

                <!-- Formulaire -->
                <Border Background="White" CornerRadius="10" Padding="25">
                    <StackPanel>
                        <!-- Description -->
                        <TextBlock Text="Description" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtDescription"
                                 Background="White"
                                 BorderBrush="#E2E8F0"
                                 BorderThickness="2"
                                 Padding="12,10"
                                 FontSize="14"
                                 Margin="0,0,0,20">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- CatÃ©gorie -->
                        <TextBlock Text="CatÃ©gorie" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbCategorie"
                                  Background="White"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="2"
                                  Padding="12,10"
                                  FontSize="14"
                                  Margin="0,0,0,20">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="Loyer" IsSelected="True"/>
                            <ComboBoxItem Content="Ã‰lectricitÃ©"/>
                            <ComboBoxItem Content="Internet"/>
                            <ComboBoxItem Content="Assurance"/>
                            <ComboBoxItem Content="Marketing"/>
                            <ComboBoxItem Content="Fournitures Bureau"/>
                            <ComboBoxItem Content="Salaires"/>
                            <ComboBoxItem Content="Autre"/>
                        </ComboBox>

                        <!-- Montant -->
                        <TextBlock Text="Montant" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBox x:Name="TxtMontant"
                                 Background="White"
                                 BorderBrush="#E2E8F0"
                                 BorderThickness="2"
                                 Padding="12,10"
                                 FontSize="14"
                                 Margin="0,0,0,20">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Date -->
                        <TextBlock Text="Date de la dÃ©pense" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <DatePicker x:Name="DpDateDepense"
                                    Background="White"
                                    BorderBrush="#E2E8F0"
                                    BorderThickness="2"
                                    Padding="12,10"
                                    FontSize="14"
                                    SelectedDate="{x:Static sys:DateTime.Now}"
                                    Margin="0,0,0,20">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Padding" Value="12,10"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <!-- Statut de paiement -->
                        <TextBlock Text="Statut de paiement" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbStatutPaiement"
                                  Background="White"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="2"
                                  Padding="12,10"
                                  FontSize="14"
                                  Margin="0,0,0,20">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content="En attente" IsSelected="True"/>
                            <ComboBoxItem Content="PayÃ©e"/>
                        </ComboBox>

                        <!-- Mode de paiement -->
                        <TextBlock Text="Mode de paiement (optionnel)" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                        <ComboBox x:Name="CmbModePaiement"
                                  Background="White"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="2"
                                  Padding="12,10"
                                  FontSize="14"
                                  Margin="0,0,0,25">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#669BBC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                            <ComboBoxItem Content=""/>
                            <ComboBoxItem Content="Comptant"/>
                            <ComboBoxItem Content="ChÃ¨que"/>
                            <ComboBoxItem Content="Virement"/>
                            <ComboBoxItem Content="Carte de crÃ©dit"/>
                            <ComboBoxItem Content="Autre"/>
                        </ComboBox>

                        <!-- Boutons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Annuler" 
                                    Background="#E2E8F0" 
                                    Foreground="#64748B"
                                    BorderThickness="0"
                                    Padding="20,12"
                                    FontSize="14"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"
                                    Click="BtnCancel_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#CBD5E1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="BtnSave"
                                    Content="Enregistrer" 
                                    Background="#669BBC" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="20,12"
                                    FontSize="14"
                                    Cursor="Hand"
                                    Click="BtnSave_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#003049"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>

