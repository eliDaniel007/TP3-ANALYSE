<Window x:Class="PGI.Views.Finances.PurchaseDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DÃ©tails de la commande"
        Height="600"
        Width="750"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="TxtNumeroCommande" 
                           Text="Commande" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#003049"/>
                <Border x:Name="BorderStatut" 
                        Background="#F59E0B" 
                        CornerRadius="6" 
                        Padding="10,5" 
                        HorizontalAlignment="Left"
                        Margin="0,10,0,0">
                    <TextBlock x:Name="TxtStatut" 
                               Text="EN ATTENTE" 
                               FontSize="12" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Informations gÃ©nÃ©rales -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ðŸ“‹ Informations" 
                               Grid.Row="0" 
                               Grid.ColumnSpan="2" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#003049"
                               Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="2" Text="Fournisseur :" Foreground="#64748B" Margin="0,5"/>
                    <TextBlock x:Name="TxtFournisseur" Grid.Row="2" Grid.Column="1" Text="-" FontWeight="SemiBold" Margin="0,5"/>

                    <TextBlock Grid.Row="3" Text="Date commande :" Foreground="#64748B" Margin="0,5"/>
                    <TextBlock x:Name="TxtDateCommande" Grid.Row="3" Grid.Column="1" Text="-" Margin="0,5"/>

                    <TextBlock Grid.Row="4" Text="Livraison prÃ©vue :" Foreground="#64748B" Margin="0,5"/>
                    <TextBlock x:Name="TxtDateLivraison" Grid.Row="4" Grid.Column="1" Text="-" Margin="0,5"/>

                    <TextBlock Grid.Row="5" Text="EmployÃ© :" Foreground="#64748B" Margin="0,5"/>
                    <TextBlock x:Name="TxtEmploye" Grid.Row="5" Grid.Column="1" Text="-" Margin="0,5"/>
                </Grid>
            </Border>

            <!-- Produits -->
            <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ“¦ Produits commandÃ©s" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#003049"
                               Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="ProductsDataGrid" 
                              AutoGenerateColumns="False" 
                              RowHeight="45"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              Background="Transparent"
                              BorderThickness="0"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              FontSize="13">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="10,8"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produit" Binding="{Binding NomProduit}" Width="*"/>
                            <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="100"/>
                            <DataGridTextColumn Header="QtÃ© CommandÃ©e" Binding="{Binding QuantiteCommandee}" Width="120"/>
                            <DataGridTextColumn Header="QtÃ© ReÃ§ue" Binding="{Binding QuantiteRecue}" Width="100"/>
                            <DataGridTextColumn Header="Prix Unit." Binding="{Binding PrixUnitaireFormate}" Width="100"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding MontantLigneFormate}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Totaux et bouton -->
            <Grid Grid.Row="4">
                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Right" MinWidth="300">
                    <StackPanel>
                        <Grid Margin="0,5">
                            <TextBlock Text="Sous-total :" Foreground="#64748B"/>
                            <TextBlock x:Name="TxtSousTotal" Text="0,00 $" HorizontalAlignment="Right"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <TextBlock Text="TPS :" Foreground="#64748B"/>
                            <TextBlock x:Name="TxtTPS" Text="0,00 $" HorizontalAlignment="Right"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <TextBlock Text="TVQ :" Foreground="#64748B"/>
                            <TextBlock x:Name="TxtTVQ" Text="0,00 $" HorizontalAlignment="Right"/>
                        </Grid>
                        <Border BorderBrush="#E2E8F0" BorderThickness="0,2,0,0" Margin="0,10"/>
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="TOTAL :" FontSize="16" FontWeight="Bold" Foreground="#003049"/>
                            <TextBlock x:Name="TxtTotal" Text="0,00 $" FontSize="18" FontWeight="Bold" Foreground="#669BBC" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Button Content="Fermer" 
                        Background="#E2E8F0" 
                        Foreground="#64748B"
                        BorderThickness="0"
                        Padding="25,12"
                        FontSize="14"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>

