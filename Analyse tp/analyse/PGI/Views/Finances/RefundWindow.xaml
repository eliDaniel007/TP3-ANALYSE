<Window x:Class="PGI.Views.Finances.RefundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rembourser un paiement"
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">
    <Border Padding="30">
        <StackPanel>
            <TextBlock Text="ðŸ’¸ Rembourser un paiement" 
                     FontSize="24" 
                     FontWeight="SemiBold" 
                     Foreground="#003049"
                     Margin="0,0,0,30"/>
            
            <!-- Informations facture -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Informations de la facture" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Foreground="#003049"
                             Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="NÂ° Facture :" FontSize="14" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtNumeroFacture" Text="F2025-1045" FontSize="14" FontWeight="SemiBold" Foreground="#003049" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Client :" FontSize="14" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtClient" Text="Aventure Nordique Inc." FontSize="14" Foreground="#003049" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Border Background="#F0FDF4" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Montant payÃ© :" FontSize="14" FontWeight="Bold" Foreground="#10B981"/>
                            <TextBlock x:Name="TxtMontantPaye" Text="4 250,00 $" FontSize="16" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- DÃ©tails du remboursement -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="DÃ©tails du remboursement" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Foreground="#003049"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Montant Ã  rembourser" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtMontantRemboursement"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="16"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Motif du remboursement" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtMotif"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="14"
                             TextWrapping="Wrap"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Date du remboursement" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtDateRemboursement"
                             Text="2025-01-28"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="14"/>
                </StackPanel>
            </Border>
            
            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ’¸ Rembourser" 
                        Background="#DC2626" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnRefund_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#991B1B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="âŒ Annuler" 
                        Background="#E2E8F0" 
                        Foreground="#64748B"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

