<Window x:Class="PGI.Views.Finances.RefundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Rembourser un paiement"
        Height="650" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="600"
        Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Border Padding="30">
            <StackPanel>
            <TextBlock Text="ðŸ’¸ Rembourser un paiement" 
                     FontSize="24" 
                     FontWeight="SemiBold" 
                     Foreground="#003049"
                     Margin="0,0,0,30"/>
            
            <!-- Informations facture -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Informations de la facture" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Foreground="#003049"
                             Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="NÂ° Facture :" FontSize="14" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtNumeroFacture" Grid.Column="1" Text="F2025-1045" FontSize="14" FontWeight="SemiBold" Foreground="#003049" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Client :" FontSize="14" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtClient" Grid.Column="1" Text="Aventure Nordique Inc." FontSize="14" Foreground="#003049" HorizontalAlignment="Right" TextWrapping="Wrap"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Montant total facture :" FontSize="14" Foreground="#64748B"/>
                        <TextBlock x:Name="TxtMontantTotal" Grid.Column="1" Text="0,00 $" FontSize="14" FontWeight="SemiBold" Foreground="#003049" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <Border Background="#F0FDF4" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Montant total payÃ© :" FontSize="14" FontWeight="Bold" Foreground="#10B981"/>
                            <TextBlock x:Name="TxtMontantPaye" Grid.Column="1" Text="0,00 $" FontSize="16" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                    
                    <Border Background="#FEF3C7" CornerRadius="8" Padding="12" Margin="0,10,0,0" Visibility="Collapsed" x:Name="BorderMontantRembourse">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="DÃ©jÃ  remboursÃ© :" FontSize="14" FontWeight="Bold" Foreground="#F59E0B"/>
                            <TextBlock x:Name="TxtMontantRembourse" Grid.Column="1" Text="0,00 $" FontSize="14" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- DÃ©tails du remboursement -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="DÃ©tails du remboursement" 
                             FontSize="16" 
                             FontWeight="SemiBold" 
                             Foreground="#003049"
                             Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Montant Ã  rembourser" FontSize="13" Foreground="#64748B" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtMontantMax" Grid.Column="1" Text="" FontSize="11" Foreground="#94A3B8" FontStyle="Italic" Margin="10,0,0,0"/>
                    </Grid>
                    <TextBox x:Name="TxtMontantRemboursement"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="16"
                             FontWeight="SemiBold"
                             TextChanged="TxtMontantRemboursement_TextChanged"
                             Margin="0,0,0,15">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#669BBC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <TextBlock Text="Motif du remboursement" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtMotif"
                             Background="White"
                             BorderBrush="#E2E8F0"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="14"
                             TextWrapping="Wrap"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Date du remboursement" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                    <DatePicker x:Name="DpDateRemboursement"
                                Background="White"
                                BorderBrush="#E2E8F0"
                                BorderThickness="2"
                                Padding="12,10"
                                FontSize="14"
                                SelectedDate="{x:Static sys:DateTime.Now}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Padding" Value="12,10"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>
            </Border>
            
            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ’¸ Rembourser" 
                        Background="#DC2626" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnRefund_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#991B1B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="âŒ Annuler" 
                        Background="#E2E8F0" 
                        Foreground="#64748B"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="Medium"
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CBD5E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
    </ScrollViewer>
</Window>

