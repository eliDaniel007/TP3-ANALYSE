<UserControl x:Class="PGI.Views.Finances.FinancesDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1100"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- A. Indicateurs Financiers (KPIs) -->
            <TextBlock Text="ðŸ’° Indicateurs Financiers (30 derniers jours)" FontSize="20" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- KPI 1: Ventes totales -->
                <Border Grid.Column="0" Background="#EEF2FF" CornerRadius="10" Padding="20" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Ventes totales" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtVentes" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#003049"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 2: DÃ©penses d'exploitation -->
                <Border Grid.Column="1" Background="#FEE2E2" CornerRadius="10" Padding="20" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="DÃ©penses d'exploitation" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtDepenses" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#DC2626"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 3: Marge / Profit Brut -->
                <Border Grid.Column="2" Background="#FEF3C7" CornerRadius="10" Padding="20" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Marge brute" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtMarge" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#D97706"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 4: Profit Net -->
                <Border Grid.Column="3" Background="#F0FDF4" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Profit Net" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtProfitNet" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- B. Suivi de TrÃ©sorerie -->
            <TextBlock Text="ðŸ“‰ Suivi de TrÃ©sorerie" FontSize="20" FontWeight="SemiBold" Foreground="#003049" Margin="0,20,0,20"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Factures en attente de paiement -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,15,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="â³ Factures en attente" 
                                 FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                        
                        <DataGrid x:Name="GridFacturesAttente" AutoGenerateColumns="False" 
                                HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent" 
                                BorderThickness="0" CanUserAddRows="False" IsReadOnly="True" FontSize="13" MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NÂ°" Binding="{Binding numero_facture}" Width="80"/>
                                <DataGridTextColumn Header="Client" Binding="{Binding client}" Width="*"/>
                                <DataGridTextColumn Header="DÃ»" Binding="{Binding montant_du, StringFormat=C}" Width="80" FontWeight="Bold" Foreground="#DC2626"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- DerniÃ¨res Transactions -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="0,0,15,0" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ DerniÃ¨res Transactions" 
                                 FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                        
                        <DataGrid x:Name="GridTransactions" AutoGenerateColumns="False" 
                                HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent" 
                                BorderThickness="0" CanUserAddRows="False" IsReadOnly="True" FontSize="13" MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding date_transaction, StringFormat={}{0:dd/MM}}" Width="60"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding type}" Width="60"/>
                                <DataGridTextColumn Header="Montant" Binding="{Binding montant, StringFormat=C}" Width="80"/>
                                <DataGridTextColumn Header="Sens" Binding="{Binding sens}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- C. Rapports et Taxes -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ›ï¸ Taxes Ã  payer" FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                        
                        <Border Background="#F1F5F9" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="TPS + TVQ perÃ§us" FontSize="12" Foreground="#64748B"/>
                                <TextBlock x:Name="TxtTaxes" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#0F172A" Margin="0,5,0,0"/>
                                <TextBlock Text="Cumulatif non versÃ©" FontSize="10" Foreground="#64748B" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Button Content="ðŸ“„ Rapport de taxes" Background="#669BBC" Foreground="White" 
                                Padding="15,10" BorderThickness="0" Margin="0,0,0,10" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        
                        <Button Content="ðŸ“Š Bilan financier" Background="#003049" Foreground="White" 
                                Padding="15,10" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
