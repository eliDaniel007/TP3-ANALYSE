<UserControl x:Class="PGI.Views.Finances.SaleFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1100"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#669BBC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock x:Name="TxtTitle" Text="ðŸ“„ Nouvelle Facture" 
                             FontSize="24" 
                             FontWeight="SemiBold" 
                             Foreground="#003049"
                             Margin="0,0,0,10"/>
                    <Border Background="#10B981" CornerRadius="12" Padding="10,5" HorizontalAlignment="Left">
                        <TextBlock x:Name="TxtStatus" Text="BROUILLON" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Content="ðŸ’¾ Enregistrer" 
                            Background="#10B981" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            FontWeight="Medium"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="BtnSave_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="ðŸ–¨ï¸ Imprimer" 
                            Background="#669BBC" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            FontWeight="Medium"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="BtnPrint_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#003049"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="âŒ Annuler" 
                            Background="#E2E8F0" 
                            Foreground="#64748B"
                            BorderThickness="0"
                            Padding="20,12"
                            FontSize="14"
                            FontWeight="Medium"
                            Cursor="Hand"
                            Click="BtnCancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CBD5E1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Corps du formulaire -->
            <StackPanel Grid.Row="1">
                <!-- Section 1: Informations Client -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¤ Informations Client" FontSize="18" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Client *" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                                <ComboBox x:Name="CmbClient" 
                                          Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="CmbClient_SelectionChanged">
                                    <ComboBoxItem Content="SÃ©lectionner un client..." IsSelected="True"/>
                                    <ComboBoxItem Content="Aventure Nordique Inc."/>
                                    <ComboBoxItem Content="Plein Air QuÃ©bec"/>
                                    <ComboBoxItem Content="Sports ExtrÃªmes"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Date de facturation" FontSize="13" Foreground="#64748B" Margin="0,0,0,8"/>
                                <TextBox x:Name="TxtDate" 
                                         Style="{StaticResource ModernTextBox}"
                                         Text="2025-01-28"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Informations auto-remplies -->
                        <Border Background="#F8FAFC" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock x:Name="TxtClientInfo" Text="SÃ©lectionnez un client pour voir ses informations" FontSize="12" Foreground="#64748B" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Section 2: Lignes de la Facture -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="ðŸ›’ Produits vendus" FontSize="18" FontWeight="SemiBold" Foreground="#003049" VerticalAlignment="Center"/>
                            <Button Content="âž• Ajouter un produit" 
                                    Background="#10B981" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    FontSize="12"
                                    FontWeight="Medium"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"
                                    Click="BtnAddProduct_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <DataGrid x:Name="ProductsDataGrid" 
                                AutoGenerateColumns="False" 
                                RowHeight="45"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                Background="Transparent"
                                BorderThickness="0"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="13"
                                Margin="0,0,0,15">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                    <Setter Property="Foreground" Value="#64748B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produit" Binding="{Binding Produit}" Width="*"/>
                                <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="100"/>
                                <DataGridTextColumn Header="Prix unit." Binding="{Binding PrixUnitaire}" Width="100"/>
                                <DataGridTextColumn Header="QuantitÃ©" Binding="{Binding Quantite}" Width="100"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Width="30" Height="30" 
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Retirer"
                                                    Foreground="#DC2626"
                                                    Click="BtnRemoveProduct_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Section 3: Totaux et Taxes -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ðŸ’µ Calculs" FontSize="18" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,20"/>
                            
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Sous-total :" FontSize="14" Foreground="#64748B" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtSubtotal" Text="0,00 $" FontSize="14" Foreground="#1E293B" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="TPS (5%) :" FontSize="14" Foreground="#64748B" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtTPS" Text="0,00 $" FontSize="14" Foreground="#1E293B" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="TVQ (9,975%) :" FontSize="14" Foreground="#64748B" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtTVQ" Text="0,00 $" FontSize="14" Foreground="#1E293B" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <Border Background="#EEF2FF" CornerRadius="8" Padding="15">
                                <Grid>
                                    <TextBlock Text="MONTANT TOTAL :" FontSize="16" FontWeight="Bold" Foreground="#003049" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TxtTotal" Text="0,00 $" FontSize="20" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Section 4: Historique des Paiements -->
                <Border Background="White" CornerRadius="10" Padding="25">
                    <StackPanel>
                        <TextBlock Text="ðŸ’³ Historique des Paiements" FontSize="18" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Montant dÃ» :" FontSize="14" Foreground="#64748B" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtMontantDu" Text="0,00 $" FontSize="16" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Right"/>
                        </Grid>
                        
                        <DataGrid x:Name="PaymentsDataGrid" 
                                AutoGenerateColumns="False" 
                                RowHeight="40"
                                HeadersVisibility="Column"
                                GridLinesVisibility="Horizontal"
                                Background="Transparent"
                                BorderThickness="0"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                IsReadOnly="True"
                                FontSize="13">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                    <Setter Property="Foreground" Value="#64748B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="150"/>
                                <DataGridTextColumn Header="Montant payÃ©" Binding="{Binding MontantPaye}" Width="*"/>
                                <DataGridTextColumn Header="MÃ©thode" Binding="{Binding Methode}" Width="200"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

