<UserControl x:Class="PGI.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200"
             Background="Transparent">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,0,30">
            <!-- A. Indicateurs de Performance (KPIs) -->
            <TextBlock Text="ðŸ“Š Indicateurs de Performance" 
                     FontSize="20" 
                     FontWeight="SemiBold" 
                     Foreground="#1E293B"
                     Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- KPI 1: Chiffre d'affaires total -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0" 
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ’°" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock Text="Chiffre d'affaires total" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtCATotal" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#003049"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 2: Nombre de ventes -->
                <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ›’" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock Text="Nombre de ventes" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtNbVentes" Text="0" FontSize="24" FontWeight="Bold" Foreground="#003049"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 3: Satisfaction client moyenne -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="â­" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock Text="Satisfaction client" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtSatisfaction" Text="0.0 / 5" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
                
                <!-- KPI 4: Valeur totale du stock -->
                <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="20"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦" FontSize="28" Margin="0,0,0,10"/>
                        <TextBlock Text="Valeur du stock" FontSize="12" Foreground="#64748B" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TxtValeurStock" Text="0,00 $" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- B. Alertes et Actions Requises -->
            <TextBlock Text="âš ï¸ Alertes et Actions Requises" 
                     FontSize="20" 
                     FontWeight="SemiBold" 
                     Foreground="#1E293B"
                     Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Alertes de rÃ©approvisionnement -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‰ RÃ©approvisionnement" FontSize="16" FontWeight="SemiBold" Foreground="#DC2626" Margin="0,0,0,15"/>
                        <DataGrid x:Name="GridReappro" AutoGenerateColumns="False" HeadersVisibility="Column" 
                                  GridLinesVisibility="None" Background="Transparent" BorderThickness="0" IsReadOnly="True" CanUserAddRows="False" MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="SKU" Binding="{Binding sku}" Width="80"/>
                                <DataGridTextColumn Header="Produit" Binding="{Binding nom}" Width="*"/>
                                <DataGridTextColumn Header="QtÃ©" Binding="{Binding qte_disponible}" Width="50"/>
                                <DataGridTextColumn Header="Seuil" Binding="{Binding seuil_reapprovisionnement}" Width="50"/>
                                <DataGridTemplateColumn Header="Action" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ“¦" 
                                                    ToolTip="RÃ©approvisionner"
                                                    Background="#F59E0B" 
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="8,4"
                                                    FontSize="12"
                                                    Cursor="Hand"
                                                    Click="BtnReappro_Click">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="4"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- Commandes Ã  traiter -->
                <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,15,0"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸšš Commandes Ã  traiter" FontSize="16" FontWeight="SemiBold" Foreground="#003049" Margin="0,0,0,15"/>
                        <DataGrid x:Name="GridCommandes" AutoGenerateColumns="False" HeadersVisibility="Column" 
                                  GridLinesVisibility="None" Background="Transparent" BorderThickness="0" IsReadOnly="True" CanUserAddRows="False" MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NÂ° Cmd" Binding="{Binding numero_commande}" Width="100"/>
                                <DataGridTextColumn Header="Client" Binding="{Binding client}" Width="*"/>
                                <DataGridTextColumn Header="Statut" Binding="{Binding statut}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- Alertes Service Client -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20"
                        BorderBrush="#E2E8F0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¬ Alertes Service Client" FontSize="16" FontWeight="SemiBold" Foreground="#F59E0B" Margin="0,0,0,15"/>
                        <DataGrid x:Name="GridService" AutoGenerateColumns="False" HeadersVisibility="Column" 
                                  GridLinesVisibility="None" Background="Transparent" BorderThickness="0" IsReadOnly="True" CanUserAddRows="False" MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding date_evaluation, StringFormat={}{0:dd/MM}}" Width="70"/>
                                <DataGridTextColumn Header="Client" Binding="{Binding client}" Width="*"/>
                                <DataGridTextColumn Header="Note" Binding="{Binding note_satisfaction}" Width="40"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- C. Graphique Ã‰volution des ventes -->
            <TextBlock Text="ðŸ“ˆ Ã‰volution des ventes" 
                     FontSize="20" 
                     FontWeight="SemiBold" 
                     Foreground="#1E293B"
                     Margin="0,0,0,20"/>
            
            <Border Background="White" CornerRadius="12" Padding="30" BorderBrush="#E2E8F0" BorderThickness="1">
                <Grid Height="350">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- LÃ©gende et titre axe Y -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Border Background="#669BBC" Width="12" Height="12" CornerRadius="2" Margin="0,0,5,0"/>
                        <TextBlock Text="Ventes ($)" FontSize="12" Foreground="#64748B"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Axe Y (Ã‰chelle) -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Margin="0,0,15,30">
                            <TextBlock Text="10k" FontSize="12" Foreground="#94A3B8" HorizontalAlignment="Right" Margin="0,0,0,40"/>
                            <TextBlock Text="7.5k" FontSize="12" Foreground="#94A3B8" HorizontalAlignment="Right" Margin="0,0,0,40"/>
                            <TextBlock Text="5k" FontSize="12" Foreground="#94A3B8" HorizontalAlignment="Right" Margin="0,0,0,40"/>
                            <TextBlock Text="2.5k" FontSize="12" Foreground="#94A3B8" HorizontalAlignment="Right" Margin="0,0,0,40"/>
                            <TextBlock Text="0" FontSize="12" Foreground="#94A3B8" HorizontalAlignment="Right"/>
                        </StackPanel>

                        <!-- Grille de fond -->
                        <Grid Grid.Column="1" Margin="0,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" BorderBrush="#F1F5F9" BorderThickness="0,1,0,0"/>
                            <Border Grid.Row="1" BorderBrush="#F1F5F9" BorderThickness="0,1,0,0"/>
                            <Border Grid.Row="2" BorderBrush="#F1F5F9" BorderThickness="0,1,0,0"/>
                            <Border Grid.Row="3" BorderBrush="#F1F5F9" BorderThickness="0,1,0,0"/>
                            <Border Grid.Row="4" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1"/>
                        </Grid>
                        
                        <!-- Zone Graphique (Barres dynamiques chargÃ©es par code) -->
                        <ItemsControl x:Name="GraphItemsControl" Grid.Column="1" VerticalAlignment="Bottom" Height="300">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Bottom" Margin="15,0">
                                        <!-- Valeur au-dessus de la barre -->
                                        <TextBlock Text="{Binding MontantFormatte}" 
                                                 FontSize="11" 
                                                 FontWeight="SemiBold" 
                                                 Foreground="#003049" 
                                                 HorizontalAlignment="Center" 
                                                 Margin="0,0,0,5"/>
                                        
                                        <!-- Barre avec dÃ©gradÃ© -->
                                        <Border Height="{Binding Hauteur}" CornerRadius="6,6,0,0" ToolTip="{Binding Tooltip}">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                                    <GradientStop Color="#60A5FA" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border.Effect>
                                                <DropShadowEffect Color="#94A3B8" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                        </Border>
                                        
                                        <!-- Mois -->
                                        <TextBlock Text="{Binding Mois}" 
                                                 FontSize="12" 
                                                 FontWeight="Medium" 
                                                 Foreground="#64748B" 
                                                 HorizontalAlignment="Center" 
                                                 Margin="0,10,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
