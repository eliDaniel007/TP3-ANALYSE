<Window x:Class="PGI.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inscription - PGI Nordik Adventures" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="#F8FAFC">
    
    <Window.Resources>
        <!-- Styles identiques Ã  LoginWindow -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#669BBC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#003049"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#669BBC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#003049"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#669BBC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#003049" BlurRadius="12" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#003049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#780000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}"
                                        Foreground="{TemplateBinding Foreground}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border"
                                                CornerRadius="8"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="30" />
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="12,10"/>
                                                <Path Grid.Column="1"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#003049"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="12,10,30,10"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderBrush="#669BBC"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Margin="0,2,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border CornerRadius="20" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#003049" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Panneau gauche avec gradient -->
            <Border Grid.Column="0" CornerRadius="20,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#669BBC" Offset="0"/>
                        <GradientStop Color="#003049" Offset="0.5"/>
                        <GradientStop Color="#780000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <StackPanel VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="INSCRIVEZ-VOUS" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="White" 
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Margin="0,0,0,16">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <TextBlock Text="CrÃ©ez votre compte en quelques secondes" 
                             FontSize="14" 
                             FontWeight="SemiBold"
                             Foreground="White" 
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Margin="0,0,0,50"/>
                    
                    <Border Background="Transparent" CornerRadius="12" Padding="20" BorderBrush="#FFFFFF66" BorderThickness="2">
                        <StackPanel>
                            <TextBlock Text="âœ“ AccÃ¨s au site d'achat" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                            <TextBlock Text="âœ“ Commandes faciles et rapides" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,0,12"/>
                            <TextBlock Text="âœ“ Suivi de vos commandes" Foreground="White" FontSize="14" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Panneau droit avec formulaire -->
            <Grid Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Center" Margin="50,40">
                        <!-- Bouton fermer -->
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                FontSize="20" 
                                Width="35" 
                                Height="35" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-20,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="#94A3B8"
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="17.5">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FEE2E2"/>
                                            <Setter Property="Foreground" Value="#DC2626"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- Titre -->
                        <TextBlock Text="CrÃ©er un compte client ðŸ“" 
                                 FontSize="26" 
                                 FontWeight="Bold" 
                                 Foreground="#1F2937"
                                 Margin="0,20,0,8"/>
                        
                        <TextBlock Text="Remplissez le formulaire pour crÃ©er votre compte client" 
                                 FontSize="13" 
                                 Foreground="#64748B"
                                 Margin="0,0,0,24"/>
                        
                        <!-- Nom complet -->
                        <TextBlock Text="Nom complet *" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#475569"
                                 Margin="0,0,0,6"/>
                        
                        <TextBox x:Name="NomTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>
                        
                        <!-- Email -->
                        <TextBlock Text="Adresse email *" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#475569"
                                 Margin="0,0,0,6"/>
                        
                        <TextBox x:Name="EmailTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>
                        
                        <!-- TÃ©lÃ©phone -->
                        <TextBlock Text="TÃ©lÃ©phone" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#475569"
                                 Margin="0,0,0,6"/>
                        
                        <TextBox x:Name="TelephoneTextBox" 
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,16"/>
                        
                        <!-- Mot de passe -->
                        <TextBlock Text="Mot de passe *" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#475569"
                                 Margin="0,0,0,6"/>
                        
                        <Grid Margin="0,0,0,16">
                            <PasswordBox x:Name="PasswordBox" 
                                         Style="{StaticResource ModernPasswordBox}"
                                         Visibility="Visible"/>
                            <TextBox x:Name="PasswordTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="Collapsed"/>
                            <Button x:Name="TogglePasswordButton"
                                    Content="ðŸ‘ï¸"
                                    Width="40"
                                    Height="40"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#64748B"
                                    FontSize="18"
                                    Cursor="Hand"
                                    Click="TogglePasswordButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F1F5F9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <!-- Confirmation mot de passe -->
                        <TextBlock Text="Confirmer le mot de passe *" 
                                 FontSize="12" 
                                 FontWeight="SemiBold" 
                                 Foreground="#475569"
                                 Margin="0,0,0,6"/>
                        
                        <Grid Margin="0,0,0,20">
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Style="{StaticResource ModernPasswordBox}"
                                         Visibility="Visible"/>
                            <TextBox x:Name="ConfirmPasswordTextBox" 
                                     Style="{StaticResource ModernTextBox}"
                                     Visibility="Collapsed"/>
                            <Button x:Name="ToggleConfirmPasswordButton"
                                    Content="ðŸ‘ï¸"
                                    Width="40"
                                    Height="40"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#64748B"
                                    FontSize="18"
                                    Cursor="Hand"
                                    Click="ToggleConfirmPasswordButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F1F5F9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <!-- Message d'erreur ou succÃ¨s -->
                        <TextBlock x:Name="Message" 
                                 Text="" 
                                 FontSize="12" 
                                 Visibility="Collapsed"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <!-- Bouton inscription -->
                        <Button x:Name="RegisterButton" 
                                Content="âœ¨ CrÃ©er mon compte" 
                                Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,0,20"
                                Click="RegisterButton_Click"/>
                        
                        <!-- Lien connexion -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Vous avez dÃ©jÃ  un compte ? " 
                                     FontSize="13" 
                                     Foreground="#64748B"/>
                            <TextBlock x:Name="LoginLink" 
                                     Text="Se connecter" 
                                     FontSize="13" 
                                     FontWeight="SemiBold" 
                                     Foreground="#7C3AED"
                                     Cursor="Hand"
                                     MouseLeftButtonDown="LoginLink_Click">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>

