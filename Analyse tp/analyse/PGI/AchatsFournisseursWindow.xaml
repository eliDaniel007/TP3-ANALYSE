<Window x:Class="PGI.AchatsFournisseursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Achats et commandes fournisseurs" Height="600" Width="1000"
        Background="#F8FAFC">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Liste des commandes fournisseurs" 
                   FontWeight="Bold" FontSize="16" Foreground="#1E3A8A" Grid.ColumnSpan="2" Margin="0,0,0,12"/>
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" Margin="0,0,12,0"
                  Background="#FFFFFF" BorderBrush="#93C5FD"
                  GridLinesVisibility="All" HeadersVisibility="Column"
                  RowBackground="#F8FAFC" AlternatingRowBackground="#FFFFFF">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3B82F6"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="8,6"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="# Commande" Width="120"/>
                <DataGridTextColumn Header="Fournisseur" Width="200"/>
                <DataGridTextColumn Header="Date" Width="120"/>
                <DataGridTextColumn Header="Montant" Width="120"/>
                <DataGridTextColumn Header="Statut" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Détails de la commande">
            <StackPanel Margin="8">
                <TextBlock Text="Fournisseur" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="Équipements Nordik Inc."/>
                <TextBlock Text="# Commande" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="CMD-2025-001"/>
                <TextBlock Text="Date" Margin="0,0,0,2" Foreground="#475569" FontSize="12"/>
                <TextBox Margin="0,0,0,8" Text="2025-10-28"/>
                <TextBlock Text="Produits commandés:" Margin="0,8,0,4" Foreground="#475569" FontWeight="SemiBold"/>
                <ListBox MaxHeight="150" BorderBrush="#93C5FD">
                    <ListBoxItem>
                        <TextBlock Text="SKU-001 - Gants Pro x 50 unités"/>
                    </ListBoxItem>
                    <ListBoxItem>
                        <TextBlock Text="SKU-114 - Tente 2P x 20 unités"/>
                    </ListBoxItem>
                </ListBox>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Créer commande" Margin="0,0,8,0" Padding="10,5" Background="#1E40AF" Foreground="White"/>
                    <Button Content="Réception" Padding="10,5" Background="#10B981" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>

